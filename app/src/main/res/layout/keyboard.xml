<?xml version="1.0" encoding="utf-8"?>
<com.braincoder.bckeyboard.MyKeyboardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="3dp"

    android:focusable="true"
    android:focusableInTouchMode="true"
    android:keyPreviewOffset="12dp"
    android:visibility="visible"

    android:keyTextSize="20sp"
    android:popupLayout="@layout/popup_layout"
    android:background="@color/keyboard_bg_color"
    android:layout_alignParentBottom="true"
    android:keyBackground="@drawable/key_background"
    android:keyTextColor="@color/keyboard_key_text_color"
    android:keyPreviewLayout ="@layout/preview"/>